@page "/navigation"
@inject NavigationManager Navigation

<h3>Navigation</h3>

<button class="btn btn-primary" @onclick="NavigateToRelative">Relative</button>
<button class="btn btn-primary" @onclick="NavigateToAbsolute">Absolute</button>
<button class="btn btn-primary" @onclick="NavigateWithForceLoad">Force load</button>
<button class="btn btn-primary" @onclick="NavigateWithReplace">Replace</button>

<NavLink href="/counter">Go to Counter</NavLink>

@code {

    private void NavigateToRelative()
    {
        Navigation.NavigateTo("/counter/55");
    }

    private void NavigateToAbsolute()
    {
        Navigation.NavigateTo("https://google.com");
    }

    private void NavigateWithForceLoad()
    {
        Navigation.NavigateTo("/counter/55", forceLoad: true);
    }

    private void NavigateWithReplace()
    {
        Navigation.NavigateTo("/counter/55", replace: true);
    }
}
